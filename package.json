{
  "name": "express-with-tdd",
  "version": "1.0.0",
  "description": "Express API with Test Driven Developement",
  "main": "app.js",
  "scripts": {
    "start": "node index",
    "dev": "cross-env NODE_ENV=development npx nodemon index",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ObothA/express-with-TDD.git"
  },
  "keywords": [
    "Test",
    "Driven",
    "Development"
  ],
  "author": "Oboth Abel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ObothA/express-with-TDD/issues"
  },
  "homepage": "https://github.com/ObothA/express-with-TDD#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "i18next": "^20.3.2",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "nodemailer": "^6.6.2",
    "sequelize": "^6.6.5",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "nodemon": "^2.0.10",
    "prettier": "^2.3.2",
    "smtp-server": "^3.9.0",
    "supertest": "^6.1.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "semi": "warn",
      "quotes": [
        "warn",
        "single"
      ],
      "prettier/prettier": "warn",
      "eqeqeq": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/config"
    ]
  }
}
